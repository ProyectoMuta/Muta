# ====================
# SERVER CONFIGURATION
# ====================
PORT=10000
ENVIRONMENT=production
BASE_URL=https://your-app.onrender.com

# ====================
# MYSQL DATABASE
# ====================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mutaDB
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# ====================
# MONGODB DATABASE
# ====================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=mutaDB

# ====================
# MERCADO PAGO
# ====================
MP_ACCESS_TOKEN=TEST-your_token_here
MP_PUBLIC_KEY=TEST-your_public_key_here
MP_WEBHOOK_SECRET=your_webhook_secret_here
MP_SANDBOX_MODE=true

# ====================
# URLS
# ====================
FRONTEND_URL=https://your-frontend.com
SUCCESS_URL=https://your-frontend.com/payment-success.html
FAILURE_URL=https://your-frontend.com/payment-failure.html
PENDING_URL=https://your-frontend.com/payment-pending.html

# ====================
# EMAIL (PHPMailer)
# ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=MUTA

# ====================
# GOOGLE OAUTH
# ====================
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret

# ====================
# JWT / SESSION
# ====================
JWT_SECRET=your_secret_key_here
SESSION_LIFETIME=86400

# ====================
# UPLOAD SETTINGS
# ====================
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# ====================
# CORS
# ====================
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ====================
# PAGINATION
# ====================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ====================
# LOGGING
# ====================
LOG_LEVEL=error
LOG_PATH=/var/log/muta
